{
  "name": "bottom-lounge-chatbot",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "description": "Chabot for www.bottomlounge.com",
  "main": "server/index.js",
  "scripts": {
    "client": "vite",
    "dev": "concurrently \"npm run client\" \"npm run server\"",
    "build": "NODE_ENV=production && export NODE_ENV && vite build",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "NODE_OPTIONS=--experimental-vm-modules && export NODE_OPTIONS && jest --runInBand --detectOpenHandles --forceExit",
    "test-routes": "NODE_OPTIONS=--experimental-vm-modules && export NODE_OPTIONS && jest \"routes.test.js\" --runInBand --detectOpenHandles --forceExit",
    "test-scraper": "NODE_OPTIONS=--experimental-vm-modules && export NODE_OPTIONS && jest \"PageScraper.test.js\" --runInBand --detectOpenHandles --forceExit",
    "test-faq": "NODE_OPTIONS=--experimental-vm-modules && export NODE_OPTIONS && jest \"getFAQ.test.js\" --runInBand --detectOpenHandles --forceExit --coverage",
    "test-responses": "NODE_OPTIONS=--experimental-vm-modules && export NODE_OPTIONS && jest \"venueQuestions.test.js\" --runInBand --detectOpenHandles --forceExit",
    "test-chatbot": "NODE_OPTIONS=--experimental-vm-modules && export NODE_OPTIONS && jest \"ChatBot.test.js\" --runInBand --detectOpenHandles --forceExit --coverage",
    "test-all": "npm run test-faq && npm run test-chatbot && npm run test-scraper && npm run test-routes && npm run test-responses",
    "server": "node server/index.js",
    "start": "NODE_ENV=production && export NODE_ENV && npm run build && npm run server"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "openai": "^3.2.1",
    "puppeteer": "^20.5.0",
    "react": "^18.2.0",
    "react-chat-widget-react-18": "^1.0.0",
    "react-dom": "^18.2.0",
    "string-strip-html": "^13.4.1",
    "uuid": "^9.0.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "jest": "^29.5.0",
    "vite": "^4.3.9"
  }
}
